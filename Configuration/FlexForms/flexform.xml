<T3DataStructure>
	<meta>
		<langDisable>1</langDisable>
	</meta>
  <sheets>
    <items>
      <ROOT>
        <TCEforms>
          <sheetTitle>LLL:EXT:simteaser/Resources/Private/Language/locallang_db.xml:pi_flexform.items</sheetTitle>
        </TCEforms> 
    		<type>array</type>
    		<el>			
    			<settings.flexform.item.images>
    				<TCEforms>
    					<exclude>1</exclude>
    					<label>LLL:EXT:simteaser/Resources/Private/Language/locallang_db.xml:pi_flexform.item.images</label>
    					<config>
                <type>group</type>
                <internal_type>file</internal_type>
                <allowed>gif,jpg,jpeg,tif,bmp,pcx,tga,png,pdf,ai</allowed>
                <max_size>500</max_size>
                <size>5</size>
                <uploadfolder>uploads/tx_simteaser</uploadfolder>
                <show_thumbs>1</show_thumbs>
                <minitems>0</minitems>
                <maxitems>20</maxitems>
              </config>
            </TCEforms>
          </settings.flexform.item.images>
          
          <settings.flexform.item.texts> 
            <TCEforms>
              <label>LLL:EXT:simteaser/Resources/Private/Language/locallang_db.xml:pi_flexform.item.texts</label>
              <config>
                <type>text</type>
                <cols>60</cols>
                <rows>5</rows>
                <default></default>
              </config>
            </TCEforms>
          </settings.flexform.item.texts>
          
          <settings.flexform.item.links> 
            <TCEforms>
              <label>LLL:EXT:simteaser/Resources/Private/Language/locallang_db.xml:pi_flexform.item.links</label>
              <config>
                <type>text</type>
                <cols>60</cols>
                <rows>5</rows>
                <default></default>
              </config>
            </TCEforms>
          </settings.flexform.item.links>        
    		</el>
    	</ROOT>
    </items>    
    <widget>
      <ROOT>
        <TCEforms>
          <sheetTitle>LLL:EXT:simteaser/Resources/Private/Language/locallang_db.xml:pi_flexform.widget</sheetTitle>
        </TCEforms> 
    		<type>array</type>
    		<el>			          
          <settings.flexform.widget.width> 
            <TCEforms>
              <label>LLL:EXT:simteaser/Resources/Private/Language/locallang_db.xml:pi_flexform.widget.width</label>
              <config>
                <type>input</type>
                <size>20</size>
                <default>80%</default>
              </config>
            </TCEforms>
          </settings.flexform.widget.width> 
          <settings.flexform.widget.height> 
            <TCEforms>
              <label>LLL:EXT:simteaser/Resources/Private/Language/locallang_db.xml:pi_flexform.widget.height</label>
              <config>
                <type>input</type>
                <size>20</size>
                <default>250px</default>
              </config>
            </TCEforms>
          </settings.flexform.widget.height>      
    		</el>
    	</ROOT>
    </widget>
  </sheets>
</T3DataStructure>